{
  "name": "meta-dotfiles",
  "module": "src/main.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "1.1.13",
    "npm-run-all2": "7.0.1"
  },
  "scripts": {
    "compile": "run-p compile:*",
    "compile:local": "bun build ./src/main.ts --compile --outfile build/bin/dfi",
    "compile:darwin-arm64": "bun build ./src/main.ts --compile --target=bun-darwin-arm64 --outfile build/bin/dfi-darwin-arm64",
    "compile:darwin-x64": "bun build ./src/main.ts --compile --target=bun-darwin-x64 --outfile build/bin/dfi-darwin-x64",
    "dev": "run-p -l dev:p:*",
    "dev:test": "bun test --watch --coverage",
    "dev:lint": "bun run lint --watch",
    "dev:p:test": "bun run dev:test",
    "dev:p:lint": "bun run dev:lint --preserveWatchOutput",
    "lint": "tsc --noEmit --noUnusedLocals --noUnusedParameters --pretty --skipLibCheck",
    "test": "bun test --coverage unit e2e",
    "test:unit": "bun test --coverage unit",
    "test:e2e": "bun test e2e",
    "test-ci:e2e": "bun test ./src/integration/ci.ts"
  },
  "peerDependencies": {
    "typescript": "5.7.2"
  },
  "dependencies": {
    "@effect/cli": "0.48.25",
    "@effect/platform": "0.69.25",
    "@effect/platform-bun": "0.49.27",
    "common-path-prefix": "3.0.0",
    "effect": "3.10.16",
    "xstate": "5.19.0"
  }
}
